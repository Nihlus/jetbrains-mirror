    <ItemGroup>
      <ProjectReference Include="..\JetBrains.Plugins.Models\JetBrains.Plugins.Models.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="content\**\*">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
